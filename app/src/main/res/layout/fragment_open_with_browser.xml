<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.kk.lp.deep_link.OpenWithBrowserFragment">

    <EditText
        android:hint="请输入深度链接"
        android:layout_margin="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deeplinks"/>
    <TextView
        android:text="Open in default Browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:id="@+id/default_browser" />

    <TextView
        android:text="Open in chrome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:id="@+id/chrome" />

    <TextView
        android:text="Open in UCBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:id="@+id/uc_browser" />

    <TextView
        android:text="Open in QQBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:id="@+id/qq_browser" />

    <TextView
        android:text="Open in liebao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:id="@+id/liebao" />


</LinearLayout>
